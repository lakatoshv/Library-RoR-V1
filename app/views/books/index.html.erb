      :delete => "Видалити",
      :question => "Ви впевнені?",
      :new => "Додати нову книгу",
      :back => "Назад"
    } 
  elsif session[:lang] == "en" 
    text ={
      :label_T => "Name",
      :label_A => "Author",
      :label_Z => "Genre",
      :label_Q => "Number of pages",
      :label_D => "Description",
      :label_I => "Address to the picture",
