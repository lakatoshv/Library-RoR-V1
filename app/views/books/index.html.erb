<p id="notice"><%= notice %></p>

<h1>Книги</h1>

<table>
  <thead>
    <tr>
      <th>Назва</th>
      <th>Автор</th>
      <th>Жанр</th>
      <th>Кільність сторінок</th>
      <th>Опис</th>
      <th>Адреса до картинки</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.auth %></td>
        <td><%= book.zhanr %></td>
        <td><%= book.pages_qty %></td>
        <td><%= book.description %></td>
        <td><%= book.image_url %></td>
        <td><%= link_to 'Показати', book %></td>
        <td><%= link_to 'Редагувати', edit_book_path(book) %></td>
        <td><%= link_to 'Видалити', book, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Додати нову книгу', new_book_path %>
