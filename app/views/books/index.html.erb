      :back => "Назад"
    } 
  end 
%>
<p id="notice"><%= notice %></p>

<h1><%= text[:h1] %></h1>

<table>
  <thead>
    <tr>
      <th><%= text[:label_T] %></th>
      <th><%= text[:label_A] %></th>
      <th><%= text[:label_Z] %></th>
      <th><%= text[:label_Q] %></th>
      <th><%= text[:label_D] %></th>
      <th><%= text[:label_I] %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.auth %></td>
        <td><%= book.zhanr %></td>
        <td><%= book.pages_qty %></td>
        <td><%= book.description %></td>
        <td><%= book.image_url %></td>
        <td><%= link_to text[:show], book %></td>
        <td><%= link_to text[:edit], edit_book_path(book) %></td>
        <td><%= link_to text[:delete], book, method: :delete, data: { confirm: text[:question] } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to text[:new], new_book_path %>

