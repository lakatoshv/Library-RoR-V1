<div class="text-center back">
	<h1 class="col-md-6 col-md-offset-3">Профіль</h1></br>
</div>
<div class="col-md-4 col-md-offset-4 back">
 	<div class="show_h2">
		<% if current_user.userparam != nil %>
			<div class="show_h2 text-center">
			    <ul class="list-inline">
			      <li><%= image_tag current_user.userparam.avatar.url(:thumb), size: '200x250', class: 'img-rounded'%></li>
			      <li>
			        <div>
			          <p class="show_h2">
			            <strong><%= current_user.userparam.firstname + " " + current_user.userparam.lastname %></strong>
			          </p>
			          <p class="show_h2">
			          	<strong>Місто: </strong>
			            <%= current_user.userparam.city %>
			          </p>
			      </li>
			    </ul>
			 </div> 
 			<p></p>
 			<%= link_to "Редагувати інформацію", userparams_edit_path(current_user)%>
 		<% else %>
			<%= link_to "Додати інформацію про себе", userparams_new_path %>
 		<%end%>
		<%= link_to "Назад", root_path %>
	</div>
</div>

