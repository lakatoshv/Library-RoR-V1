<% if session[:lang] == "ua" 
    text ={
      :label_A => "Автори",
      :show => "Показати",
      :edit => "Редагувати",
      :delete => "Видалити",
      :question => "Ви впевнені?",
      :new => "Додати нового автора",
      :back => "Назад"
    } 
  elsif session[:lang] == "en" 
    text ={
      :label_A => "Authors",
      :show => "Show",
      :edit => "Edit",
      :delete => "Remove",
      :question => "Are you sure?",
      :new => "Add new author",
      :back => "Back"
    } 
  elsif session[:lang] == "ru"
    text ={
      :label_A => "Автори",
      :show => "Показать",
      :edit => "Редактировать",
      :delete => "Удалить",
      :question => "Вы уверены?",
      :new => "Добавить нового автора",
      :back => "Назад"
    } 
  end 
%>
<p id="notice"><%= notice %></p>

<div class="text-center back">
  <h1 class="col-md-6 col-md-offset-3"><%= text[:label_A] %></h1></br>
  <%= link_to text[:new], new_auth_path %>
</div>
<div class="container">
  <div class="row">
    <% @auths.each do |auth| %>
      <div class="col-lg-3">
        <div class="box">
          <div class="box-gray aligncenter">
            <h3><%= link_to auth.auth, auth, :class => "product" %></h3>
            <h4><a href="/books?utf8=✓&search=<%= auth.book %>&commit=Пошук" class="product"><%= auth.book %></a></h4>
            <div class="icon">
              
              <i class="fa fa-desktop fa-3x"></i>
            </div>
            <p>
               <%= link_to 'Видалити', auth, method: :delete, data: { confirm: 'Ви впевнені?' } %>  | <%= link_to text[:edit], edit_auth_path(auth) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
