<% if session[:lang] == "ua" 
    text ={
      :label_A => "Автор",
      :edit => "Редагувати",
      :back => "Назад"
    } 
  elsif session[:lang] == "en" 
    text ={
      :label_A => "Author",
      :edit => "Edit",
      :back => "Back"
    } 
  elsif session[:lang] == "ru"
    text ={
      :label_A => "Автор",
      :edit => "Редактировать",
      :back => "Назад"
    } 
  end 
%>
<div class="col-md-4 col-md-offset-4 back">
  <p id="notice"><%= notice %></p>
  <div class="show_h2 text-center">

    <p>
      <strong><%= @auth.auth %></strong>
    </p>
  </div> 
  <div class="show_h2_content">  
    <p>
      <strong><%= text[:label_A] %></strong>
      <%= @auth.auth %>
    </p>
    <p>
      <strong><%= text[:label_A] %></strong>
      <%= @auth.book %>
    </p>
    <p>
      <span class="glyphicon glyphicon-thumbs-up"><%= @auth.get_likes.size %></span>
      <span class="glyphicon glyphicon-thumbs-down"><%= @auth.get_dislikes.size %></span>
    </p>
  </div>
   <div class="show_h2_content text-center">
    <%= link_to "Подобається", like_auth_path(@auth), class: "btn btn-default blue" %>
    <%= link_to "Неподобається", dislike_auth_path(@auth), class: "btn btn-default red" %><br>
    <%= link_to text[:edit], edit_auth_path(@auth) %> |
    <%= link_to text[:back], auths_path %>
  </div>
</div>
