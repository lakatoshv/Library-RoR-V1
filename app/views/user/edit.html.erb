<%= form_for @user, :url => {:action => "update"} do |f|%>
<%= render 'shared/error' %>

		<%= f.label :name %> </br>
		<%= f.text_field :name %> </br>

		<%= f.label :password %> </br>
		<%= f.password_field :password %> </br>

		<%= f.label :password_confirmation, "Confirmation" %> </br>
		<%= f.password_field :password_confirmation %> </br>

		<%= f.submit "Edit"%>

<% end %>