<% if session[:lang] == "ua" 
    text ={
      :h1 => "Критика",
      :label_A => "Автор",
      :label_B => "Назва книги",
      :label_O => "Оцінка",
      :show => "Показати",
      :edit => "Редагувати",
      :delete => "Видалити",
      :question => "Ви впевнені?",
      :new => "Додати новий відгук",
      :back => "Назад"
    } 
  elsif session[:lang] == "en" 
    text ={
      :h1 => "Kritics",
      :label_A => "Author",
      :show => "Show",
      :edit => "Edit",
      :delete => "Remove",
      :question => "Are you sure?",
      :new => "Add new review",
      :back => "Back"
    } 
  elsif session[:lang] == "ru"
    text ={
      :h1 => "Критика",
      :label_A => "Автор",
      :show => "Показать",
      :edit => "Редактировать",
      :delete => "Удалить",
      :question => "Вы уверены?",
      :new => "Добавить новий отзив",
      :back => "Назад"
    } 
  end 
%>
<p id="notice"><%= notice %></p>
<div class="text-center back">
  <h1 class="col-md-6 col-md-offset-3"><%= text[:h1] %></h1></br>
  <h2 class="col-md-6 col-md-offset-3 back"><%= @title %></h2></br>
  <%= link_to text[:new], new_kritic_path %>
</div>
<div class="container">
  <div class="row">
    <% @vidguks.each do |vidguk| %>
      <div class="col-lg-3">
        <div class="box">
          <div class="box-gray aligncenter">
            <h3><%= link_to vidguk.name, vidguk, :class => "product" %></h3>
            <h4><a href="/books?utf8=✓&search=<%= vidguk.title_book %>&commit=Пошук" class="product"><%= vidguk.title_book %></a></h4>
            <div class="icon">
              
              <i class="fa fa-desktop fa-3x"></i>
            </div>
            <p>
              <%= vidguk.date %><br>
              <%= link_to text[:delete], vidguk, method: :delete, data: { confirm: text[:question] } %> | <%= link_to text[:edit], edit_vidguk_path(vidguk) %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>




<p id="notice"><%= notice %></p>

<h1>Vidguks</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Title book</th>
      <th>Vidguk</th>
      <th>Date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vidguks.each do |vidguk| %>
      <tr>
        <td><%= vidguk.name %></td>
        <td><%= vidguk.title_book %></td>
        <td><%= vidguk.vidguk %></td>
        <td><%= vidguk.date %></td>
        <td><%= link_to 'Show', vidguk %></td>
        <td><%= link_to 'Edit', edit_vidguk_path(vidguk) %></td>
        <td><%= link_to 'Destroy', vidguk, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

